<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReleaseActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite">
        <Button
            android:id="@+id/posting_fh"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表帖子"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/release_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="发表"
            android:textSize="15sp"
            android:background="@drawable/fasong"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文章标题"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/release_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="请输入您的文章标题。"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文章内容"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/release_rr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的想发送的帖子内容！！！"
        android:textSize="14sp"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片:"
            android:textSize="15sp"
            android:layout_margin="7dp"/>
        <ImageButton
            android:id="@+id/release_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_black_24dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你所选择的图片:"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="8sp"/>
    <ProgressBar
        android:id="@+id/pb_main_download"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"
        android:max="100" />
    <ImageView
        android:id="@+id/posting_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />
</LinearLayout>